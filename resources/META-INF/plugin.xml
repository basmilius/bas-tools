<idea-plugin>
	<id>com.basmilius.ps.bastools</id>
	<name>Bas Tools</name>
	<version>1.0</version>
	<vendor email="basmilius@hotmail.com" url="https://www.basmilius.com">Bas Milius</vendor>

	<description><![CDATA[]]></description>

	<change-notes><![CDATA[Bas Tools!]]></change-notes>

	<idea-version since-build="171.0"/>

	<extensions defaultExtensionNs="com.intellij">
		<fileIconProvider implementation="com.basmilius.ps.bastools.framework.identity.provider.IdentityIconProvider"/>
		<iconProvider implementation="com.basmilius.ps.bastools.framework.identity.provider.IdentityIconProvider"/>
		<treeStructureProvider implementation="com.basmilius.ps.bastools.framework.identity.provider.IdentityTreeStructureProvider"/>
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<completion.contributor language="PHP" implementationClass="com.basmilius.ps.bastools.framework.identity.completion.CoreCompletionContributor"/>
		<defaultLiveTemplatesProvider implementation="com.basmilius.ps.bastools.framework.identity.liveTemplates.IdentityLiveTemplatesProvider"/>
		<liveTemplateContext implementation="com.basmilius.ps.bastools.framework.identity.liveTemplates.IdentityLiveTemplatesContext"/>
		<intentionAction>
			<className>com.basmilius.ps.bastools.framework.identity.intention.ReplaceWpActionWithIdentityActionIntention</className>
			<category>PHP</category>
		</intentionAction>
	</extensions>

	<actions>

		<group id="BasTools.Main" text="Bas Tools" description="Tools by Bas Milius">
			<add-to-group group-id="MainMenu" anchor="last"/>

			<group id="BasTools.Main.QuickNav" icon="AllIcons.General.MoreTabs" popup="true" text="Quick Actions"/>

			<separator/>

			<group id="BasTools.Main.Angular" icon="/icons/angular.png" popup="true" text="Angular Tools"/>
			<group id="BasTools.Main.Cordova" icon="/icons/cellphone.png" popup="true" text="Cordova Tools"/>

			<separator/>

			<action id="BasTools.Action.About" class="com.basmilius.ps.bastools.action.AboutAction" text="About Bas Tools"/>
		</group>

		<group id="BasTools.QuickNav" text="Bas Tools Quicklinks" description="Tools by Bas Milius">
			<add-to-group group-id="NavBarToolBar" anchor="last"/>
			<add-to-group group-id="BasTools.Main.QuickNav"/>

			<action id="BasTools.QuickNav.ShowColorPicker" class="com.basmilius.ps.bastools.action.editor.ShowColorPickerAction" text="Show Color Picker" icon="/icons/camera-iris.png"/>
			<action id="BasTools.QuickNav.ShowColorPipette" class="com.basmilius.ps.bastools.action.editor.ShowColorPipetteAction" text="Show Color Pipette" icon="/icons/eyedropper.png"/>
		</group>

		<group id="BasTools.Angular" text="Angular Tools">
			<add-to-group group-id="BasTools.Main.Angular"/>

			<action id="BasTools.Angular.Build" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/angular.png" text="Build"/>
			<action id="BasTools.Angular.Serve" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/angular.png" text="Serve"/>

			<separator/>

			<action id="BasTools.Angular.Build.Production" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/angular.png" text="Build (Production)"/>
			<action id="BasTools.Angular.Serve.Production" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/angular.png" text="Serve (Production)"/>

			<separator/>

			<action id="BasTools.Angular.Version" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/angular.png" text="Show Version"/>
		</group>

		<group id="BasTools.Cordova" text="Cordova Tools">
			<add-to-group group-id="BasTools.Main.Cordova"/>

			<action id="BasTools.Cordova.Prepare" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/cellphone.png" text="Prepare App"/>
			<action id="BasTools.Cordova.Requirements" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/cellphone.png" text="Check Requirements"/>

			<separator/>

			<action id="BasTools.Cordova.Prepare.Android" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/android.png" text="Prepare App for Android"/>
			<action id="BasTools.Cordova.Build.Android" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/android.png" text="Build App for Android"/>
			<action id="BasTools.Cordova.Run.Android" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/android.png" text="Run App on Android Device"/>

			<separator/>

			<action id="BasTools.Cordova.Prepare.IOs" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/apple-ios.png" text="Prepare App for iOS"/>

			<separator/>

			<action id="BasTools.Cordova.Prepare.Windows" class="com.basmilius.ps.bastools.action.ideemedia.angular.VersionAction" icon="/icons/windows.png" text="Prepare App for Windows"/>
		</group>

	</actions>

	<project-components>
		<component>
			<implementation-class>com.basmilius.ps.bastools.component.DefaultProjectComponent</implementation-class>
		</component>
	</project-components>

	<application-components>
		<component>
			<implementation-class>com.basmilius.ps.bastools.component.BasToolsComponent</implementation-class>
		</component>
	</application-components>

	<depends>com.jetbrains.php</depends>
	<depends>com.jetbrains.twig</depends>
	<depends>com.intellij.modules.lang</depends>
	<depends>com.intellij.modules.platform</depends>

</idea-plugin>
