<idea-plugin>

	<name>Bas Tools</name>
	<id>com.basmilius.bastools</id>
	<version>1.4.0</version>
	<vendor email="bas@mili.us" url="https://www.basmilius.com">Bas Milius</vendor>

	<description><![CDATA[Adds enhanced features to JetBrains IDE's]]></description>

	<change-notes>
		<![CDATA[For change notes, please go to the GitHub repository.]]>
	</change-notes>

	<depends>com.intellij.modules.lang</depends>
	<depends>com.intellij.modules.platform</depends>
	<depends>com.intellij.modules.ultimate</depends>

	<depends optional="true" config-file="php-plugin.xml">com.jetbrains.php</depends>

	<!-- General -->
	<extensions defaultExtensionNs="com.intellij">

		<applicationConfigurable groupId="root" groupWeight="0" displayName="Bas Tools" id="BasTools.Config.Root" instance="com.basmilius.bastools.core.configurable.BasToolsConfigurable"/>
		<applicationConfigurable parentId="BasTools.Config.Root" displayName="Personal" id="BasTools.Config.Personal" instance="com.basmilius.bastools.core.configurable.personal.BasToolsPersonalConfigurable"/>
		<applicationConfigurable parentId="BasTools.Config.Root" displayName="Presenter" id="BasTools.Config.Presenter" instance="com.basmilius.bastools.core.configurable.presenter.BasToolsPresenterConfigurable"/>

		<applicationService serviceImplementation="com.basmilius.bastools.core.configurable.personal.BasToolsPersonalConfigurable$PersonalConfigurationState"/>
		<applicationService serviceImplementation="com.basmilius.bastools.core.configurable.presenter.BasToolsPresenterConfigurable$PresenterConfigurationState"/>

		<bundledColorScheme id="Bas Settings" path="./colors/Bas Settings"/>
		<bundledInspectionProfile id="Bas Settings" path="./inspection/Bas Settings"/>

		<editorTabColorProvider implementation="com.basmilius.bastools.ui.tabs.BasToolsEditorTabColorProvider"/>
		<iconProvider implementation="com.basmilius.bastools.provider.BasToolsIconProvider"/>

		<toolWindow id="Color Tools" anchor="right" icon="/icons/clock.png" factoryClass="com.basmilius.bastools.toolWindow.ColorsToolWindow"/>
		<toolWindow id="Datetime Tools" anchor="right" icon="/icons/clock.png" factoryClass="com.basmilius.bastools.toolWindow.DateTimeToolWindowFactory"/>

	</extensions>

	<application-components>

		<component>
			<implementation-class>com.basmilius.bastools.component.BasToolsComponent</implementation-class>
		</component>

		<component>
			<implementation-class>com.basmilius.bastools.ui.tabs.BasToolsTabHighlighterComponent</implementation-class>
		</component>

		<component>
			<implementation-class>com.basmilius.bastools.ui.tabs.BasToolsTabsPainterPatcherComponent</implementation-class>
		</component>

		<component>
			<implementation-class>com.basmilius.bastools.component.presenter.shortcuts.ShortcutPresenter</implementation-class>
		</component>

	</application-components>

	<project-components>

		<component>
			<implementation-class>com.basmilius.bastools.watcher.SassWatcherProjectComponent</implementation-class>
		</component>

	</project-components>

	<actions>

		<group id="BasTools.Main" text="Bas Tools" description="Tools by Bas Milius">
			<add-to-group group-id="MainMenu" anchor="last"/>

			<group id="BasTools.Main.QuickNav" popup="true" text="Quick Actions" icon="/icons/quick_actions.png"/>

			<separator/>

			<group id="BasTools.Main.ShiftTab"/>

			<separator/>

			<group id="BasTools.Main.Code"/>

			<action id="BasTools.Main.Action.Editor.CodeShot" class="com.basmilius.bastools.action.editor.CodeShotAction" text="Code Shot">
				<keyboard-shortcut first-keystroke="ctrl NUMPAD5" keymap="$default"/>
			</action>

			<separator/>

			<action id="BasTools.Action.About" class="com.basmilius.bastools.action.AboutAction" text="About Bas Tools" icon="/icons/bas_tools.png"/>
		</group>

		<group id="BasTools.Code" text="Code" popup="true" icon="/icons/code.png">
			<add-to-group group-id="BasTools.Main.Code"/>
			<add-to-group group-id="EditorPopupMenu" anchor="first"/>
		</group>

		<group id="BasTools.PresenterMode" text="Presenter Mode" popup="true">
			<add-to-group group-id="BasTools.Main.Code"/>

			<action id="BasTools.PresenterMode.Enable" text="Enable Presenter Mode" class="com.basmilius.bastools.action.presenter.EnablePresenterModeAction"/>
			<action id="BasTools.PresenterMode.Disable" text="Disable Presenter Mode" class="com.basmilius.bastools.action.presenter.DisablePresenterModeAction"/>
			<action id="BasTools.PresenterMode.Toggle" text="Toggle Presenter Mode" class="com.basmilius.bastools.action.presenter.TogglePresenterModeAction"/>
		</group>

		<group id="BasTools.ShiftTab" popup="true" text="Shift Tab" icon="/icons/shift_tab_right.png">
			<add-to-group group-id="BasTools.Main.ShiftTab"/>

			<action id="BasTools.Action.ShiftTabRight" class="com.basmilius.bastools.action.editor.ShiftTabRightAction" text="Shift Tab Right" icon="/icons/shift_tab_right.png">
				<keyboard-shortcut first-keystroke="ctrl NUMPAD6" keymap="$default"/>
			</action>

			<action id="BasTools.Action.ShiftTabLeft" class="com.basmilius.bastools.action.editor.ShiftTabLeftAction" text="Shift Tab Left" icon="/icons/shift_tab_left.png">
				<keyboard-shortcut first-keystroke="ctrl NUMPAD4" keymap="$default"/>
			</action>

			<action id="BasTools.Action.ShiftTabDown" class="com.basmilius.bastools.action.editor.ShiftTabDownAction" text="Shift Tab Down" icon="/icons/shift_tab_down.png">
				<keyboard-shortcut first-keystroke="ctrl NUMPAD2" keymap="$default"/>
			</action>

			<action id="BasTools.Action.ShiftTabUp" class="com.basmilius.bastools.action.editor.ShiftTabUpAction" text="Shift Tab Up" icon="/icons/shift_tab_up.png">
				<keyboard-shortcut first-keystroke="ctrl NUMPAD8" keymap="$default"/>
			</action>
		</group>

		<group id="BasTools.QuickNav" text="Bas Tools Quicklinks" description="Tools by Bas Milius">
			<add-to-group group-id="NavBarToolBar" anchor="last"/>
			<add-to-group group-id="BasTools.Main.QuickNav"/>

			<action id="BasTools.QuickNav.ToolWindowDateTimeHelpers" class="com.basmilius.bastools.action.tools.DisplayDateTimeToolWindow" text="Show Date Time Tool Window" icon="/icons/clock.png"/>
			<action id="BasTools.QuickNav.ShowColorPicker" class="com.basmilius.bastools.action.editor.ShowColorPickerAction" text="Show Color Picker" icon="/icons/color.png"/>
			<action id="BasTools.QuickNav.ShowColorPipette" class="com.basmilius.bastools.action.editor.ShowColorPipetteAction" text="Show Color Pipette" icon="/icons/dropper.png"/>
		</group>

	</actions>

</idea-plugin>
