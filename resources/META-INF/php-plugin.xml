<?xml version="1.0" encoding="iso-8859-1"?>
<idea-plugin>

	<!-- All Framework Stuff -->
	<extensions defaultExtensionNs="com.intellij">

		<treeStructureProvider implementation="com.basmilius.bastools.framework.all.provider.AllTreeStructureProvider"/>

		<completion.confidence language="PHP" id="asTrue" order="first" implementationClass="com.basmilius.bastools.framework.all.completion.confidence.PhpParameterStringCompletionConfidence"/>
		<completion.contributor language="PHP" order="FIRST" id="BasTools.Framework.All.Completion" implementationClass="com.basmilius.bastools.framework.all.completion.AllCompletionContributor"/>
		<defaultLiveTemplatesProvider implementation="com.basmilius.bastools.framework.all.liveTemplates.AllLiveTemplatesProvider"/>
		<psi.referenceContributor implementation="com.basmilius.bastools.framework.all.psi.PhpFileReferenceContributor"/>

		<localInspection language="PHP" groupPath="Bas Tools,General Inspections" shortName="CallableValidityInspector" displayName="Validates callables" groupName="Probable Bugs" enabledByDefault="true" level="WARNING" implementationClass="com.basmilius.bastools.framework.all.codeInspection.CallableValidityInspector"/>
		<localInspection language="PHP" groupPath="Bas Tools,General Inspections" shortName="MarthaNamingIsNotValidInspection" displayName="Martha Naming" groupName="Probable Bugs" enabledByDefault="true" level="WARNING" implementationClass="com.basmilius.bastools.framework.all.codeInspection.MarthaNamingIsNotValidInspection"/>

		<defaultTemplatePropertiesProvider implementation="com.basmilius.bastools.core.configurable.personal.BasToolsPersonalTemplatePropertiesProvider"/>
		<liveTemplatePreprocessor implementation="com.basmilius.bastools.core.configurable.personal.BasToolsPersonalTemplatePreprocessor"/>

	</extensions>

	<extensions defaultExtensionNs="com.jetbrains.php">

	</extensions>

	<!-- Identity Framework Stuff -->
	<extensions defaultExtensionNs="com.intellij">

		<fileIconProvider implementation="com.basmilius.bastools.framework.identity.provider.IdentityIconProvider"/>
		<iconProvider implementation="com.basmilius.bastools.framework.identity.provider.IdentityIconProvider"/>
		<treeStructureProvider implementation="com.basmilius.bastools.framework.identity.provider.IdentityTreeStructureProvider"/>

		<completion.contributor language="PHP" implementationClass="com.basmilius.bastools.framework.identity.completion.CoreCompletionContributor"/>
		<defaultLiveTemplatesProvider implementation="com.basmilius.bastools.framework.identity.liveTemplates.IdentityLiveTemplatesProvider"/>
		<directoryProjectGenerator implementation="com.basmilius.bastools.framework.identity.installer.IdentityInstallerWebProjectTemplate"/>
		<liveTemplateContext implementation="com.basmilius.bastools.framework.identity.liveTemplates.IdentityLiveTemplatesContext"/>
		<projectTemplatesFactory implementation="com.basmilius.bastools.framework.identity.installer.IdentityInstallerTemplatesFactory"/>

		<localInspection language="PHP" groupPath="Bas Tools,Identity Framework" shortName="WordPressHookSystemAddActionInspector" displayName="Usage of add_action" groupName="Code Style" enabledByDefault="true" level="WEAK WARNING" implementationClass="com.basmilius.bastools.framework.identity.codeInspection.WordPressHookSystemAddActionInspector"/>
		<localInspection language="PHP" groupPath="Bas Tools,Identity Framework" shortName="WordPressHookSystemDoActionInspector" displayName="Usage of do_action" groupName="Code Style" enabledByDefault="true" level="WEAK WARNING" implementationClass="com.basmilius.bastools.framework.identity.codeInspection.WordPressHookSystemDoActionInspector"/>
		<localInspection language="PHP" groupPath="Bas Tools,Identity Framework" shortName="WordPressHookSystemRemoveActionInspector" displayName="Usage of remove_action" groupName="Code Style" enabledByDefault="true" level="WEAK WARNING" implementationClass="com.basmilius.bastools.framework.identity.codeInspection.WordPressHookSystemRemoveActionInspector"/>
		<localInspection language="PHP" groupPath="Bas Tools,Identity Framework" shortName="WordPressHookSystemAddFilterInspector" displayName="Usage of add_filter" groupName="Code Style" enabledByDefault="true" level="WEAK WARNING" implementationClass="com.basmilius.bastools.framework.identity.codeInspection.WordPressHookSystemAddFilterInspector"/>
		<localInspection language="PHP" groupPath="Bas Tools,Identity Framework" shortName="WordPressHookSystemApplyFiltersInspector" displayName="Usage of apply_filters" groupName="Code Style" enabledByDefault="true" level="WEAK WARNING" implementationClass="com.basmilius.bastools.framework.identity.codeInspection.WordPressHookSystemApplyFiltersInspector"/>
		<localInspection language="PHP" groupPath="Bas Tools,Identity Framework" shortName="WordPressHookSystemRemoveFilterInspector" displayName="Usage of remove_filter" groupName="Code Style" enabledByDefault="true" level="WEAK WARNING" implementationClass="com.basmilius.bastools.framework.identity.codeInspection.WordPressHookSystemRemoveFilterInspector"/>

	</extensions>

	<!-- Cappuccino support -->
	<extensions defaultExtensionNs="com.intellij">

		<codeStyleSettingsProvider implementation="com.basmilius.bastools.language.cappuccino.formatter.CappuccinoCodeStyleProvider"/>
		<colorSettingsPage implementation="com.basmilius.bastools.language.cappuccino.CappuccinoColorsAndFontsPage"/>
		<completion.contributor language="Cappuccino" implementationClass="com.basmilius.bastools.language.cappuccino.completion.CappuccinoCompletionContributor"/>
		<defaultLiveTemplatesProvider implementation="com.basmilius.bastools.language.cappuccino.liveTemplates.CappuccinoLiveTemplatesProvider"/>
		<fileTypeFactory implementation="com.basmilius.bastools.language.cappuccino.CappuccinoFileTypeFactory"/>
		<highlightErrorFilter implementation="com.basmilius.bastools.language.cappuccino.CappuccinoHighlightErrorFilter"/>
		<indexPatternBuilder implementation="com.basmilius.bastools.language.cappuccino.CappuccinoIndexPatternBuilder"/>
		<lang.braceMatcher language="Cappuccino" implementationClass="com.basmilius.bastools.language.cappuccino.CappuccinoPairedBraceMatcher"/>
		<lang.commenter language="Cappuccino" implementationClass="com.basmilius.bastools.language.cappuccino.CappuccinoCommenter"/>
		<lang.elementManipulator forClass="com.basmilius.bastools.language.cappuccino.elements.CappuccinoBlockTag" implementationClass="com.basmilius.bastools.language.cappuccino.elements.manipulators.CappuccinoBlockTagManipulator"/>
		<lang.elementManipulator forClass="com.basmilius.bastools.language.cappuccino.elements.CappuccinoExtendsTag" implementationClass="com.basmilius.bastools.language.cappuccino.elements.manipulators.CappuccinoFileReferenceManipulator"/>
		<lang.elementManipulator forClass="com.basmilius.bastools.language.cappuccino.elements.CappuccinoVerbatimStatement" implementationClass="com.basmilius.bastools.language.cappuccino.elements.manipulators.CappuccinoVerbatimStatementManipulator"/>
		<lang.elementManipulator forClass="com.basmilius.bastools.language.cappuccino.elements.CappuccinoTagWithFileReference" implementationClass="com.basmilius.bastools.language.cappuccino.elements.manipulators.CappuccinoFileReferenceManipulator"/>
		<lang.fileViewProviderFactory language="Cappuccino" implementationClass="com.basmilius.bastools.language.cappuccino.CappuccinoFileViewProviderFactory"/>
		<lang.findUsagesProvider language="Cappuccino" implementationClass="com.basmilius.bastools.language.cappuccino.editor.CappuccinoFindUsagesProvider"/>
		<lang.foldingBuilder language="Cappuccino" implementationClass="com.basmilius.bastools.language.cappuccino.folding.CappuccinoFoldingBuilder"/>
		<lang.formatter language="Cappuccino" implementationClass="com.basmilius.bastools.language.cappuccino.formatter.CappuccinoFormattingModelBuilder"/>
		<gotoDeclarationHandler implementation="com.basmilius.bastools.language.cappuccino.CappuccinoGoToCappyContributor"/>
		<lang.parserDefinition language="Cappuccino" implementationClass="com.basmilius.bastools.language.cappuccino.parser.CappuccinoParserDefinition"/>
		<lang.psiStructureViewFactory language="Cappuccino" implementationClass="com.basmilius.bastools.language.cappuccino.structure.CappuccinoStructureViewProvider"/>
		<langCodeStyleSettingsProvider implementation="com.basmilius.bastools.language.cappuccino.formatter.CappuccinoLanguageCodeStyleSettingsProvider"/>
		<liveTemplateContext implementation="com.basmilius.bastools.language.cappuccino.liveTemplates.CappuccinoTemplateContextType"/>
		<multiHostInjector implementation="com.basmilius.bastools.language.cappuccino.injection.CappuccinoVerbatimInjector"/>
		<quoteHandler fileType="Cappuccino" className="com.basmilius.bastools.language.cappuccino.CappuccinoQuoteHandler"/>
		<targetElementEvaluator language="Cappuccino" implementationClass="com.basmilius.bastools.language.cappuccino.editor.CappuccinoTargetElementEvaluator"/>
		<typedHandler implementation="com.basmilius.bastools.language.cappuccino.CappuccinoTypedHandler"/>

	</extensions>

	<project-components>
		<component>
			<implementation-class>com.basmilius.bastools.component.DefaultProjectComponent</implementation-class>
		</component>
	</project-components>

	<actions>

		<action class="com.basmilius.bastools.action.code.json.JsonRearrangePropertiesAction" id="BasTools.Main.Code.JsonArrange" icon="/icons/code_rearrange.png">
			<add-to-group group-id="BasTools.Main.Code"/>
		</action>

	</actions>

</idea-plugin>
